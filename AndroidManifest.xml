<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rockpaperscissors"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.rockpaperscissors.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.rockpaperscissors.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.example.rockpaperscissors.SignupActivity"
            android:label="@string/title_activity_signup" >
        </activity>
        <activity
            android:name="com.example.rockpaperscissors.SigninActivity"
            android:label="@string/title_activity_signin" >
        </activity>
        <activity
            android:name="com.example.rockpaperscissors.ModesActivity"
            android:label="@string/title_activity_modes" >
        </activity>
        <activity
            android:name="com.example.rockpaperscissors.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.example.rockpaperscissors.ScoresActivity"
            android:label="@string/title_activity_scores" >
        </activity>
        <activity
            android:name="com.example.rockpaperscissors.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.example.rockpaperscissors.RulesActivity"
            android:label="@string/title_activity_rules" >
        </activity>
        <activity
            android:name="com.example.rockpaperscissors.ClassicGameActivity"
            android:label="@string/title_activity_classic_game" >
        </activity>
    </application>

</manifest>